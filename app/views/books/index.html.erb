<html>
    <head>
        
    </head>
 <body>
    <h1>Books</h1>
     <table>
         <thead>
             <tr>
                 <th>Title</th>
                 <th>Body</th>
                 <th colspan="3"></th>
             </tr>
         </thead>
     </table>
      <% @books.each do |book| %>
     <tr>
         <tb><%=book.title %></tb>
         <tb><%=book.body %></tb>
     <% end %>     
         
         <tb>
             <a class="show" href="">Show</a>
         </tb>
         <tb>
             <a class="edit" href="">Edit</a>
         </tb>
         <tb>
             <a data-confirm="Are you sure?" class="destroy"  rel="nofollow" data-method="delete" href="">Destroy</a>
         </tb>
     </tr>
     
    <h2>New book</h2>
    <%= form_with model: @book do |f| %>
    <%= f.text_field :title %>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
    <% end %>
    
</html>
 
    